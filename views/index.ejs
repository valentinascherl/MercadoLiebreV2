<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Mercado Liebre Argentina</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/css/app.css">
</head>

<body>
	<!-- Header -->
	<% include ./partials/header.ejs %>
	<!-- /Header -->
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>
			<% for(product of productosAMostrar){
				 if(product.category == 'visited'){%>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/product/detail/<%= product.id %>/<%= product.category %>">
								<figure class="product-box_image">
									<img src="/images/<%= product.image %>" alt="imagen de producto">
								</figure>
								<article class="product-box_data">
									<h2>$<%= formatPrice(product.price, product.discount)%></h2>
									<% if(product.discount != 0){%>
									<span><%= product.discount %>% OFF</span>
									<%}%>
									<p><%= product.name %></p>
									<i class="fas fa-truck"></i>
								</article>
							</a>
						</section>
					</div>
			<%}
			}%>
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<% for(product of productosAMostrar){
				 if(product.category == 'in-sale'){%>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/product/detail/<%= product.id %>/<%= product.category %>">
								<figure class="product-box_image">
									<img src="/images/<%= product.image %>" alt="imagen de producto">
								</figure>
								<article class="product-box_data">
									<h2>$<%= formatPrice(product.price, product.discount)%></h2>
									<% if(product.discount != 0){%>
										<span><%= product.discount %>% OFF</span>
									<%}%>
									<p><%= product.name %></p>
									<i class="fas fa-truck"></i>
								</article>
							</a>
						</section>
					</div>
			<%}
			}%>

		</div>
		<!-- /ultima visita -->

		<!-- footer -->
		<%- include('./partials/footer.ejs') %>
		<!-- /footer -->
</body>

</html>